@charset "UTF-8";
@import url("https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap");
html {
  overflow-y: scroll;
  background: #0b0911;
}

body {
  display: flex;
  flex-direction: column;
  background: #1B172D;
  font-family: Poppins;
  font-size: 12px;
  line-height: 18px;
  color: #FFF;
  max-width: 1366px;
  min-height: 100vh;
  margin: auto;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  text-rendering: optimizeLegibility;
}

main {
  flex: 1;
}

footer {
  background-color: #231E3A;
  padding: 28px 20px;
}
@media screen and (min-width: 1440px) {
  footer {
    padding: 28px 100px;
  }
}

img, svg {
  max-width: 100%;
  max-height: 100%;
}

h1, h2, h3, h4, h5, h6 {
  margin: 0;
  font-weight: 600;
}

h1 {
  font-size: 32px;
  line-height: 48px;
}

h4 {
  font-size: 16px;
  line-height: 24px;
}

p {
  margin-bottom: 10px;
}

a {
  color: #52CCDE;
}

.container {
  flex: 1;
}
.container__item--flex {
  flex: 1;
}

.account__heading {
  margin-bottom: 20px;
}
.account__details {
  display: flex;
  flex-direction: column;
}
@media screen and (min-width: 768px) {
  .account__details {
    flex-direction: row;
  }
}
.account__orders {
  flex: 1;
  margin-bottom: 20px;
}
.cart__container {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.cart__container h1 {
  margin-bottom: 20px;
}
.cart__container form {
  width: 90%;
}
@media screen and (min-width: 425px) {
  .cart__container form {
    width: 80%;
  }
}
@media screen and (min-width: 1440px) {
  .cart__container form {
    width: 60%;
  }
}
.cart__container .item__container {
  display: flex;
  flex-direction: row;
}
.cart__container .item__image {
  display: none;
  height: 120px;
}
@media screen and (min-width: 375px) {
  .cart__container .item__image {
    display: block;
  }
}
.cart__container .item__details {
  flex: 1;
  padding: 10px;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}
.cart__container .item__quantity {
  display: none;
  padding: 10px;
}
@media screen and (min-width: 768px) {
  .cart__container .item__quantity {
    display: block;
  }
}
.cart__container .item__quantity input {
  max-width: 100px;
}
.cart__container .item__price {
  min-width: 60px;
  text-align: right;
  padding: 10px 0;
}
.cart__summary {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}
.cart__summary h4 {
  margin-bottom: 10px;
}

.customer__form {
  display: flex;
  flex-direction: column;
}
.customer__form input[type=submit] {
  align-self: center;
  width: 120px;
}
.customer__register {
  font-size: 14px;
  text-align: center;
}

.header__nav {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 12px 18px;
  line-height: 40px;
}
@media screen and (min-width: 1440px) {
  .header__nav {
    padding: 15px 100px;
  }
}
.header__nav a {
  margin: 0 8px;
}
.header__cart-btn {
  padding: 10px 14px;
  border-radius: 20px;
  background-color: #52CCDE;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  text-decoration: none;
  color: white;
  font-weight: 600;
  font-size: 14px;
  line-height: 21px;
}
.header__cart-btn img {
  margin-right: 8px;
}
.header__account-name {
  font-size: 14px;
  -webkit-user-select: none;
          user-select: none;
  margin-right: 2px;
}
.header__account-btn {
  padding: 10px;
  border-radius: 20px;
  background-color: #8C52DE;
  display: flex;
}

.profile {
  -webkit-user-select: none;
          user-select: none;
  position: absolute;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin: -42px 0px 0px;
  width: 100%;
}
@media screen and (min-width: 1024px) {
  .profile {
    flex-direction: row;
    margin: -90px 0px 0px 100px;
    width: inherit;
  }
}
.profile__avatar {
  background-color: #FFF;
  width: 84px;
  height: 84px;
  min-width: 84px;
  min-height: 84px;
  border-radius: 50%;
  border: 3px solid #463D6D;
  box-sizing: border-box;
  box-shadow: 0px 10px 8px rgba(0, 0, 0, 0.17);
  overflow: hidden;
}
.profile__avatar img {
  max-height: 100%;
  max-width: 100%;
}
@media screen and (min-width: 1024px) {
  .profile__avatar {
    width: 150px;
    height: 150px;
    min-width: 150px;
    min-height: 150px;
    border: 5px solid #463D6D;
  }
}
.profile__details {
  display: flex;
  flex-direction: column;
  align-items: center;
}
@media screen and (min-width: 1024px) {
  .profile__details {
    align-items: flex-start;
    margin: 0px 0px 60px 16px;
  }
}
.profile__name {
  display: flex;
  flex-direction: row;
}
.profile__name span {
  font-size: 32px;
  line-height: 48px;
  font-weight: 600;
  letter-spacing: 0.01em;
  text-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
}
.profile__name img {
  margin: 0px 0px 0px 12px;
}
.profile__stats span {
  font-size: 16px;
  line-height: 24px;
  margin-right: 12px;
}

.product .carousel img {
  max-width: 100%;
}
@media screen and (min-width: 1440px) {
  .product .carousel img {
    max-width: 668px;
  }
}
.product__hero .container__item--flex:last-child, .product__meta .container__item--flex:last-child {
  flex: 1 0 25%;
  max-width: 500px;
}
.product__meta, .product__description {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
@media screen and (min-width: 1440px) {
  .product__meta, .product__description {
    padding-left: 100px;
    flex-direction: row;
  }
}
.product__hero {
  background-color: #EEE;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #444;
}
@media screen and (min-width: 1440px) {
  .product__hero {
    height: 668px;
    flex-direction: row;
  }
}
.product__form form {
  display: flex;
  flex-direction: column;
  margin-top: 60px;
}
.product__form h1 {
  font-size: 42px;
  line-height: 50px;
}
.product__form input:not([type=submit]), .product__form select {
  background: #FFF;
  color: #444;
}
.product__form .price {
  font-size: 32px;
  line-height: 48px;
  color: #52CCDE;
}
.product__form .add-to-cart {
  width: 200px;
}
.product__form .selector-wrapper {
  display: flex;
  flex-direction: column;
  max-width: 120px;
}
.product__meta {
  flex-direction: row;
  flex-wrap: wrap;
  background-color: #272141;
}
.product__meta h4 {
  line-height: 20px;
}
.product__meta .container__item--flex {
  display: flex;
  align-items: flex-start;
  justify-content: center;
  flex-direction: column;
  padding: 10px;
  white-space: nowrap;
}
.product__meta .container__item--flex:last-child {
  box-sizing: border-box;
}
@media screen and (min-width: 1440px) {
  .product__meta .container__item--flex:last-child {
    border-left: 2px solid #463D6D;
  }
}
.product__meta .container__item--flex.meta span {
  opacity: 0.5;
}
.product__meta .profile {
  flex-direction: row;
  justify-content: flex-start;
  position: relative;
  margin: 0;
}
.product__meta .profile__avatar {
  width: 58px;
  height: 58px;
  min-width: 58px;
  min-height: 58px;
  border-width: 2px;
}
@media screen and (min-width: 1440px) {
  .product__meta .profile__avatar {
    margin: 20px 0 20px 20px;
  }
}
.product__meta .profile__details {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  margin: 0 10px;
}
@media screen and (min-width: 1440px) {
  .product__meta .profile__details {
    margin: 0 10px;
  }
}
.product__meta .profile__name {
  align-items: center;
}
.product__meta .profile__name span {
  font-size: 16px;
  line-height: 24px;
}
.product__meta .profile__name img {
  height: 14px;
  margin: 0px 0px 0px 8px;
}
.product__meta .profile__stats a {
  -webkit-user-select: auto;
          user-select: auto;
}
.product__description {
  font-size: 14px;
  line-height: 24px;
}
.product__description .container__item--flex:first-child {
  padding: 10px 20px;
}
@media screen and (min-width: 1440px) {
  .product__description .container__item--flex:first-child {
    padding: 40px 60px 40px 0;
  }
}
.product__description .container__item--flex:last-child {
  padding: 10px 20px;
  box-sizing: border-box;
  max-width: 500px;
  margin-right: 0;
}
@media screen and (min-width: 1440px) {
  .product__description .container__item--flex:last-child {
    padding: 30px 10px;
    border-left: 2px solid #463D6D;
  }
}
.product__description .container__item--flex:first-child:last-child {
  max-width: 100%;
  margin-right: 100px;
}
@media screen and (min-width: 1440px) {
  .product__description .container__item--flex:first-child:last-child {
    border-left: none;
  }
}
.product__description .care h4 {
  margin: 10px;
}
.product__description .care__item {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.product__description .care__item-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 10px;
  min-width: 30px;
}

.site-footer {
  display: flex;
  justify-content: flex-start;
}
.site-footer__copyright {
  font-size: 12px;
  line-height: 18px;
  opacity: 0.5;
}

.btn,
button,
[type=button],
[type=reset],
[type=submit] {
  color: #FFF;
  font-weight: 600;
  font-size: 12px;
  font-family: inherit;
  border: 0;
  padding: 12px 14px;
  background: #52CCDE;
  border-radius: 20px;
  cursor: pointer;
  min-width: 120px;
  text-decoration: none;
  -webkit-user-select: none;
          user-select: none;
}

.carousel {
  display: flex;
  justify-content: center;
  height: 100%;
}
.carousel img {
  max-height: 100%;
}

input, text, select {
  margin-bottom: 20px;
  background: #2E274C;
  border: 1px solid rgba(68, 68, 68, 0.2);
  box-sizing: border-box;
  border-radius: 3px;
  padding: 8px 14px;
  color: rgba(255, 255, 255, 0.5);
  font-size: 14px;
  height: 40px;
}

label {
  font-weight: 600;
  font-size: 14px;
  line-height: 21px;
  margin-bottom: 8px;
}
label:after {
  content: ":";
}

.flex__spacer {
  flex: 1;
}

form#create_customer, form#customer_login {
  padding: 10px;
  max-width: 500px;
  margin: auto;
}
@media screen and (min-width: 1440px) {
  form#create_customer, form#customer_login {
    padding: 0;
  }
}

.hero__banner {
  background-size: cover;
  background-position: top;
  width: 100%;
  padding-top: 21.96%;
}

@media screen and (min-width: 1440px) {
  .hero__banner {
    height: 300px;
    padding-top: 0;
  }
}
.main {
  margin: 120px 0 40px 0;
  padding: 10px 10px;
}

@media screen and (min-width: 1024px) {
  .main {
    margin: 0px;
    padding: 60px 40px;
  }
}
.collection--empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 680px;
  background-color: rgba(46, 39, 76, 0.5);
  border-radius: 3px;
  -webkit-user-select: none;
          user-select: none;
}

.collection--empty span {
  margin-top: 20px;
  font-weight: 600;
  font-size: 16px;
  line-height: 24px;
  color: #463D6D;
}

.product-grid {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
}

.product-item {
  display: flex;
  flex-direction: column;
  margin: 10px;
  width: 276px;
  height: 370px;
  background-color: #2E274C;
  border-radius: 3px;
  overflow: hidden;
}

.product-item img {
  position: relative;
  background-color: #EEE;
  min-width: 276px;
  min-height: 276px;
  max-width: 100%;
  max-height: 100%;
}

.product-item__details {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.product-item__details a {
  color: white;
  text-decoration: none;
}

.product-item__details span {
  opacity: 0.5;
}

.product-item__options {
  display: flex;
}

.product-item__options span:first-child:nth-last-child(2n)::after {
  margin: 0px 5px;
  content: "•";
}