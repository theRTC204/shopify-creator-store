@charset "UTF-8";
@import url("https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap");
html {
  background: #0b0911;
}

body {
  background: #1B172D;
  font-family: Poppins;
  font-size: 12px;
  line-height: 18px;
  color: #FFF;
  max-width: 1366px;
  min-height: 100vh;
  margin: auto;
}

footer {
  background-color: #231E3A;
  padding: 28px 100px;
}

h1, h2, h3, h4, h5, h6 {
  margin: 0;
  font-weight: 600;
}

h1 {
  font-size: 32px;
  line-height: 48px;
}

h4 {
  font-size: 16px;
  line-height: 24px;
}

a {
  color: #52CCDE;
}

.container {
  flex: 1;
}
.container__item--flex {
  flex: 1;
}
.container__item--flex:last-child {
  flex: 1 0 25%;
  max-width: 500px;
}

.profile {
  -webkit-user-select: none;
          user-select: none;
  position: absolute;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin: -42px 0px 0px;
  width: 100%;
}
@media screen and (min-width: 1440px) {
  .profile {
    flex-direction: row;
    margin: -90px 0px 0px 100px;
    width: inherit;
  }
}
.profile__avatar {
  background-color: #FFF;
  width: 84px;
  height: 84px;
  min-width: 84px;
  min-height: 84px;
  border-radius: 50%;
  border: 3px solid #463D6D;
  box-sizing: border-box;
  box-shadow: 0px 10px 8px rgba(0, 0, 0, 0.17);
  overflow: hidden;
}
.profile__avatar img {
  max-height: 100%;
  max-width: 100%;
}
@media screen and (min-width: 1440px) {
  .profile__avatar {
    width: 150px;
    height: 150px;
    min-width: 150px;
    min-height: 150px;
    border: 5px solid #463D6D;
  }
}
.profile__details {
  display: flex;
  flex-direction: column;
  align-items: center;
}
@media screen and (min-width: 1440px) {
  .profile__details {
    align-items: flex-start;
    margin: 0px 0px 60px 16px;
  }
}
.profile__name {
  display: flex;
  flex-direction: row;
}
.profile__name span {
  font-size: 32px;
  line-height: 48px;
  font-weight: 600;
  letter-spacing: 0.01em;
  text-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
}
.profile__name img {
  margin: 0px 0px 0px 12px;
}
.profile__stats span {
  font-size: 16px;
  line-height: 24px;
  margin-right: 12px;
}

.product .container__item--flex:last-child {
  flex: 1 0 25%;
  max-width: 500px;
}
.product .carousel img {
  max-width: 668px;
}
.product__meta, .product__description {
  padding-left: 100px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.product__meta .container__item--flex:last-child, .product__description .container__item--flex:last-child {
  border-left: 2px solid #463D6D;
  box-sizing: border-box;
}
.product__meta {
  background-color: #272141;
}
.product__meta h4 {
  line-height: 20px;
}
.product__meta .container__item--flex {
  display: flex;
  align-items: flex-start;
  justify-content: center;
  flex-direction: column;
}
.product__meta .container__item--flex.meta span {
  opacity: 0.5;
}
.product__meta .profile {
  flex-direction: row;
  justify-content: flex-start;
  position: relative;
  margin: 0;
}
.product__meta .profile__avatar {
  width: 58px;
  height: 58px;
  min-width: 58px;
  min-height: 58px;
  margin: 20px 0 20px 20px;
  border-width: 2px;
}
.product__meta .profile__details {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  margin: 0 10px;
}
@media screen and (min-width: 1440px) {
  .product__meta .profile__details {
    margin: 0 10px;
  }
}
.product__meta .profile__name {
  align-items: center;
}
.product__meta .profile__name span {
  font-size: 16px;
  line-height: 24px;
}
.product__meta .profile__name img {
  height: 14px;
  margin: 0px 0px 0px 8px;
}
.product__meta .profile__stats a {
  -webkit-user-select: all;
          user-select: all;
}
.product__description {
  font-size: 16px;
  line-height: 26px;
}
.product__description .container__item--flex:first-child {
  padding: 40px 60px 40px 0;
}

button {
  color: #FFF;
  font-weight: 600;
  font-size: 12px;
  font-family: inherit;
  border: 0;
  padding: 12px 14px;
  height: 40px;
  background: #52CCDE;
  border-radius: 20px;
}

.carousel {
  display: flex;
  justify-content: center;
  height: 100%;
}
.carousel img {
  max-height: 100%;
}

.header__nav {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 12px 18px;
  line-height: 40px;
}

@media screen and (min-width: 1440px) {
  .header__nav {
    padding: 15px 100px;
  }
}
.header__cart-btn {
  padding: 10px 14px;
  border-radius: 20px;
  background-color: #52CCDE;
}

.header__cart-btn a {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  text-decoration: none;
  color: white;
  font-weight: 600;
  font-size: 14px;
  line-height: 21px;
}

.header__cart-btn img {
  margin-right: 8px;
}

.hero__banner {
  background-size: cover;
  background-position: top;
  width: 100%;
  padding-top: 21.96%;
}

@media screen and (min-width: 1440px) {
  .hero__banner {
    height: 300px;
    padding-top: 0;
  }
}
.main {
  margin-top: 110px;
}

@media screen and (min-width: 1440px) {
  .main {
    margin-top: 0px;
    padding: 60px 80px;
  }
}
.collection--empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 680px;
  background-color: rgba(46, 39, 76, 0.5);
  border-radius: 3px;
  -webkit-user-select: none;
          user-select: none;
}

.collection--empty span {
  margin-top: 20px;
  font-weight: 600;
  font-size: 16px;
  line-height: 24px;
  color: #463D6D;
}

.product-grid {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  padding: 10px;
}

.product-item {
  display: flex;
  flex-direction: column;
  margin: 10px;
  width: 276px;
  height: 370px;
  background-color: #2E274C;
  border-radius: 3px;
  overflow: hidden;
}

.product-item img {
  position: relative;
  background-color: #EEE;
  min-width: 276px;
  min-height: 276px;
  max-width: 100%;
  max-height: 100%;
}

.product-item__details {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.product-item__details a {
  color: white;
  text-decoration: none;
}

.product-item__details span {
  opacity: 0.5;
}

.product-item__options {
  display: flex;
}

.product-item__options span:first-child:nth-last-child(2n)::after {
  margin: 0px 5px;
  content: "â€¢";
}

.product__hero {
  height: 668px;
  background-color: #FFF;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  color: #444;
}

.product__form form {
  display: flex;
  flex-direction: column;
  margin-top: 60px;
}

.product__form h1 {
  font-size: 42px;
  line-height: 50px;
}

.product__form .price {
  font-size: 32px;
  line-height: 48px;
  color: #52CCDE;
}

.product__form .add-to-cart {
  width: 200px;
}