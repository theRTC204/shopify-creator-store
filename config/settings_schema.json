        "type": "header",
        "content": "Profile settings"
      },
      {
        "type": "image_picker",
        "id": "profile_image",
        "label": {
          "en": "Image"
        },
        "info": "Recommended: 300x300 pixels"
      },
      {
        "type": "text",
        "id": "creator_name",
        "label": "Twitch username"
      },
      {
        "type": "radio",
        "id": "is_partner",
        "label": "Show Partner badge?",
        "default": "no",
        "options": [
          {
            "value": "yes",
            "label": "Yes"
          },
          {
            "value": "no",
            "label": "No"
          }
        ]
      }
