        "default": "center",
        "options": [
          {
            "value": "top",
            "label": "Top"
          },
          {
            "value": "center",
            "label": "Center"
          },
          {
            "value": "bottom",
            "label": "Bottom"
          }
        ]
      },
      {
        "type": "select",
        "id": "banner_size",
        "label": {
          "en": "Fitment"
        },
        "default": "cover",
        "options": [
          {
            "value": "cover",
            "label": "Cover"
          },
          {
            "value": "contain",
            "label": "Contain"
          }
        ]
      },
      {
        "type": "header",
        "content": "Experimental features",
        "info": "These features are still in development and may not function as intended."
      },
      {
        "type": "radio",
        "id": "channel_stats",
        "label": {
          "en": "Channel Stats"
        },
        "info": "Display your channel stats below your username.",
